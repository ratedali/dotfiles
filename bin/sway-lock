#!/bin/sh
TMPBG=$(mktemp screen-XXX.png -p /tmp)
LOCK=~/.bin/blur-lock.png
RES=$(swaymsg -t get_outputs | jq '.[0].rect|"\(.width)*\(.height)"')
ffmpeg -f swaygrab -video_size "$RES" -y -i "$DISPLAY" -i "$LOCK" -filter_complex "boxblur=5:1,overlay=(main_w-overlay_w)/2:(main_h-overlay_h)/2" -vframes 1 "$TMPBG" -loglevel quiet
swaylock -i "$TMPBG"
rm "$TMPBG"
