 # window colors
 #                       border              background         text                 indicator
 client.focused          $bg-color           $bg-color          $text-color          #00ff00
 client.unfocused        $bg-color           $bg-color          $inactive-text-color #00ff00
 client.focused_inactive $bg-color           $bg-color          $inactive-text-color #00ff00
 client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

 # hide edge indicator
 hide_edge_borders both

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3blocks
    position top
    font pango: Noto Sans 12, Font Awesome 12
    strip_workspace_numbers yes
    colors {
        background $bg-color
        separator #757575
        #                  Border           Background       Text
        focused_workspace  $bg-color        $highlight-color $text-color
        inactive_workspace $bg-color        $bg-color        $text-color
        urgent_workspace   $urgent-bg-color $urgent-bg-color $text-color
    }
}

