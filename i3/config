# Volume Controls
bindsym XF86AudioMute exec --no-startup-id mixer -c 1 set Master toggle; exec amixer -c 1 set Speaker toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -c 1 set Master 5%+ unmute; exec amixer -c 1 set Speaker unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -c 1 set Master 5%- unmute; exec amixer -c 1 set Speaker unmute

# Brightness Controls
bindsym XF86MonBrightnessUp exec xbacklight +1
bindsym XF86MonBrightnessDown exec xbacklight -1

# Print Screen
bindsym Print exec scrot ~/Pictures/Screenshots/%Y-%m-%d_%s_\$wx\$h.png

# Input Control
bindsym Scroll_Lock exec --no-startup-id ~/.bin/toggle_touchpad.sh
bindsym $mod+F1 exec --no-startup-id ~/.bin/toggle_touchscreen.sh

# Lock Screen
set $Locker ~/.bin/lock

#exec xautolock -time 10 -locker $Locker

set $power_mode  (D)im    (L)ock    L(e)ave    (S)hutdown     (H)ibernate    (R)eboot    S(u)spend 

mode "$power_mode" {
    bindsym d exec --no-startup-id xset dpms force off, mode "default"
    bindsym l exec --no-startup-id $Locker && xset dpms force off, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym s exec --no-startup-id systemctl poweroff -i, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym u exec --no-startup-id systemctl suspend, mode "default"

    # back to normal mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym --release Mod1+Ctrl+Delete mode "$power_mode"

