# Volume Controls
bindsym XF86AudioMute exec pactl set-sink-mute 'alsa_output.pci-0000_00_1f.3.analog-stereo' toggle, exec pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 'alsa_output.pci-0000_00_1f.3.analog-stereo' +2%, exec pkill -SIGRTMIN+10 i3blocks
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 'alsa_output.pci-0000_00_1f.3.analog-stereo' -2%, exec pkill -SIGRTMIN+10 i3blocks

# Brightness Controls
bindsym XF86MonBrightnessUp exec brightnessctl s 1%+
bindsym XF86MonBrightnessDown exec brightnessctl s 1%-

# Media Control
bindsym XF86AudioNext exec playerctl -p mpd next, exec pkill -SIGRTMIN+12 i3blocks
bindsym Shift+XF86AudioNext exec playerctl -p mpd position 5+
bindsym XF86AudioPrev exec playerctl -p mpd previous, exec pkill -SIGRTMIN+12 i3blocks
bindsym Shift+XF86AudioPrev exec playerctl -p mpd position 0
bindsym XF86AudioPlay exec playerctl -p mpd play-pause, exec pkill -SIGRTMIN+12 i3blocks

# Print Screen
