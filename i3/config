 set $inactive-bg-color   #202020
 set $text-color          #d6dae4
 set $inactive-text-color #808080
 set $urgent-bg-color     #de342e
 set $highlight-color     #0F80D5

 # window colors
 #                       border              background         text                 indicator
 client.focused          $bg-color           $bg-color          $text-color          #00ff00
 client.unfocused        $bg-color           $bg-color          $inactive-text-color #00ff00
 client.focused_inactive $bg-color           $bg-color          $inactive-text-color #00ff00
 client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          #00ff00

 # hide edge indicator

 hide_edge_borders both
# Start i3bar to display a workspace bar (plus the system information i3blocks
# finds out, if available)
bar {
    i3bar_command  i3bar -t
    status_command i3blocks
    position top
    font pango: Fira Sans, Font Awesome 5 Free 14
    strip_workspace_numbers yes
    colors {
        background $bg-color
        separator #757575
        #                  Border           Background       Text
        focused_workspace  $bg-color        $highlight-color $text-color
        inactive_workspace $bg-color        $bg-color        $text-color
        urgent_workspace   $urgent-bg-color $urgent-bg-color $text-color
    }
}

