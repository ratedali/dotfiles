# Start i3bar to display a workspace bar (plus the system information i3blocks
# finds out, if available)
bar {
    status_command i3blocks
    position top
    font Fira Sans, Font Awesome 5 Free 14
    strip_workspace_numbers yes
    colors {
        background $bg-color
        separator #757575
        #                  Border           Background       Text
        focused_workspace  $bg-color        $bg-color        $highlight-color
        inactive_workspace $bg-color        $bg-color        $text-color
        urgent_workspace   $bg-color        $bg-color        $urgent-color
    }
}

