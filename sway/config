# Volume Controls
bindsym XF86AudioMute exec mixer -c 0 set Master toggle; exec amixer -c 0 set Speaker toggle
bindsym XF86AudioRaiseVolume exec amixer -c 0 set Master 5%+ unmute; exec amixer -c 0 set Speaker unmute
bindsym XF86AudioLowerVolume exec amixer -c 0 set Master 5%- unmute; exec amixer -c 0 set Speaker unmute

# Brightness Controls
